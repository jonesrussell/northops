[Unit]
Description=NorthOps Inertia SSR server
After=network.target
ConditionPathExists=/home/deployer/northops/current

[Service]
Type=simple
WorkingDirectory=/home/deployer/northops/current
Environment=INERTIA_SSR_PORT=13720
ExecStart=/bin/bash -lc 'source ~/.nvm/nvm.sh 2>/dev/null; exec /usr/bin/php artisan inertia:start-ssr'
Restart=always
RestartSec=3

[Install]
WantedBy=default.target
